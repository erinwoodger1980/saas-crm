// Tenant-level workshop process definitions
model WorkshopProcessDefinition {
  id                String   @id @default(cuid())
  tenantId          String
  code              String // e.g., "MACHINING", "ASSEMBLY", etc.
  name              String // Display name
  sortOrder         Int      @default(0)
