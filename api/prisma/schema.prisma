  blanksStatus    String? // STOCK | ORDERED | RECEIVED | N/A | URGENT
  blanksChecked   Boolean @default(false)
  lippingsStatus  String?
  lippingsChecked Boolean @default(false)
  facingsStatus   String?
  facingsChecked  Boolean @default(false)
  glassStatus     String?
  glassChecked    Boolean @default(false)
  cassettesStatus String?
  cassettesChecked Boolean @default(false)
  timbersStatus   String?
  timbersChecked  Boolean @default(false)

  ironmongeryStatus  String? // FROM TGS | RECEIVED FROM TGS | FROM CUSTOMER | RECEIVED FROM CUSTOMER | OTHER | NOT ORDERED | ORDERED | N/A
  ironmongeryChecked Boolean @default(false)

  // 4. PRODUCTION & CAPACITY (all percentages 0-100)
  blanksCutPercent Int? // BLANKS CUT %
  edgebandPercent  Int? // EDGEBAND %
  calibratePercent Int? // CALIBRATE %
  facingsPercent   Int? // FACINGS %
  finalCncPercent  Int? // FINAL CNC %
  finishPercent    Int? // FINISH %
  sandPercent      Int? // SAND %
  sprayPercent     Int? // SPRAY %
  cutPercent       Int? // CUT %
  cncPercent       Int? // CNC %
  buildPercent     Int? // BUILD %
  overallProgress  Int? // PROGRESS (overall %)

  hiddenStatus String? // HIDDEN field from BOM CHECK

  // 5. PAPERWORK & CERTIFICATION
  paperworkStatus           String? // N/A | WORKING ON SCHEDULE | READY TO PRINT IN OFFICE | PRINTED IN OFFICE | TAKEN OUT TO FACTORY
  doorPaperworkStatus       String? // DOOR PAPERWORK
  finalCncSheetStatus       String? // FINAL CNC SHEET
  finalChecksSheetStatus    String? // FINAL CHECKS SHEET
  deliveryChecklistStatus   String? // DELIVERY CHECKLIST
  framesPaperworkStatus     String? // FRAMES PAPERWORK
  paperworkComments         String? // PAPERWORK COMMENTS

  certificationRequired String? // Q Mark, etc. (from LAJ MASTER: Certification)
  fscRequired           Boolean @default(false) // FSC from LAJ MASTER
  invoiceStatus         String? // Inv Y / N

  // 6. DELIVERY & INSTALLATION
  transportStatus   String? // TRANSPORT status
  deliveryDate      DateTime? // Actual delivery date
  installStart      DateTime? // Installation start
  installEnd        DateTime? // Installation completion
  snaggingStatus    String? // Snagging list status
  snaggingComplete  Boolean   @default(false)
  snaggingNotes     String? // Snagging notes

  // 7. COMMUNICATION & NOTES
  communicationNotes String? // Communication column from BOM CHECK
  internalNotes      String? // Internal team notes
  lastUpdatedBy      String? // Who last modified
  lastUpdatedAt      DateTime @default(now()) // When last modified

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([tenantId])
  @@index([tenantId, jobLocation])
  @@index([tenantId, signOffStatus])
  @@index([tenantId, dateRequired])
  @@index([projectId])
}

// ============================================================================
// FIRE DOOR CLIENT PORTAL MODELS
// Public-facing system for clients to submit door schedules and track orders
// Replaces Google Sheet: "LAJ & Lloyd Worrall Import Sheet (Master).csv"
// ============================================================================

model ClientAccount {
  id        String   @id @default(cuid())
  tenantId  String   // Fire door manufacturer this client belongs to
  
  // Company Information
  companyName     String
  accountNumber   String?  // Internal reference
  primaryContact  String?
  email           String
  phone           String?
  address         String?
  city            String?
  postcode        String?
  country         String?   @default("UK")
  
  // Account Settings
  isActive        Boolean   @default(true)
  notes           String?
  
  // Timestamps
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  // Relations
  tenant          Tenant              @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  users           ClientUser[]
  jobs            FireDoorClientJob[]
  leads           Lead[]              // Leads linked to this customer
  opportunities   Opportunity[]       // Opportunities linked to this customer
  
  @@index([tenantId])
  @@index([tenantId, email])
  @@index([tenantId, companyName])
}

model ClientUser {
  id                String   @id @default(cuid())
  clientAccountId   String
  
  // User Information
  email             String
  passwordHash      String
  firstName         String
  lastName          String
  phone             String?
  jobTitle          String?
  
  // Account Status
  isActive          Boolean   @default(true)
  emailVerified     Boolean   @default(false)
  lastLoginAt       DateTime?
  
  // Password Reset
  resetToken        String?
  resetTokenExpiry  DateTime?
  
  // Timestamps
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  
  // Relations
  clientAccount     ClientAccount @relation(fields: [clientAccountId], references: [id], onDelete: Cascade)
  
  @@unique([email])
  @@index([clientAccountId])
  @@index([email])
}

model FireDoorClientJob {
  id                String   @id @default(cuid())
  tenantId          String   // Fire door manufacturer
  clientAccountId   String   // Client who submitted
  submittedBy       String?  // ClientUser ID who submitted
  
  // Job Details (top section of import sheet)
  jobName           String
  projectReference  String?
  siteAddress       String?
  deliveryAddress   String?
  contactPerson     String?
  contactEmail      String?
  contactPhone      String?
  
  // Order Information
  poNumber          String?
  quoteReference    String?
  dateRequired      DateTime?
  
  // Status & Progress
  status            String    @default("PENDING_REVIEW")  
  // PENDING_REVIEW | PRICING_IN_PROGRESS | PRICED | AWAITING_APPROVAL | 
  // APPROVED | IN_PRODUCTION | READY_FOR_DELIVERY | DELIVERED | COMPLETE
  
  // Pricing
  totalPrice        Decimal?
  pricePerUnit      Json?     // Breakdown by door item
  pricedAt          DateTime?
  pricedBy          String?   // User ID who priced
  
  // Production Tracking
  productionStarted DateTime?
  estimatedCompletion DateTime?
  actualCompletion  DateTime?
  
  // Notes & Communication
  clientNotes       String?   // Notes from client at submission
  internalNotes     String?   // Internal manufacturer notes
  
  // Timestamps
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  submittedAt       DateTime  @default(now())
  
  // Relations
  tenant            Tenant              @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  clientAccount     ClientAccount       @relation(fields: [clientAccountId], references: [id], onDelete: Cascade)
  doorItems         FireDoorClientDoorItem[]
  rfis              FireDoorClientRFI[]
  
  @@index([tenantId])
  @@index([clientAccountId])
  @@index([tenantId, status])
  @@index([tenantId, dateRequired])
  @@index([submittedAt])
}

