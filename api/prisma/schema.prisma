  tenantId                  String    @id
  slug                      String    @unique
  brandName                 String
  introHtml                 String?
  website                   String?
  phone                     String?
  links                     Json?
  questionnaire             Json?
  logoUrl                   String?
  inbox                     Json?
  inboxLastRun              DateTime?
  inboxWatchEnabled         Boolean   @default(false)
  quoteDefaults             Json?
  taskPlaybook              Json?     @default("{}")
  questionnaireEmailSubject String?
  questionnaireEmailBody    String?
