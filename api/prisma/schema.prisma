  dateRequired    DateTime? // Date Required (client deadline)
  poNumber        String? // P/O No.
  laqNumber       String? // LAQ No.
  compOrderNumber String? // Comp Order No.

  // 2. DESIGN & SIGN-OFF
  jobLocation            String? // RED FOLDER | IN PROGRESS | COMPLETE
  signOffStatus          String? // AWAITING SCHEDULE | NOT LOOKED AT | WORKING ON SCHEDULE | SCHEDULE SENT FOR SIGN OFF | SCHEDULE SIGNED OFF
  signOffDate            DateTime? // DATE SIGNED OFF
  scheduledBy            String? // DARREN | DAVE | STEVE | PAUL | DAN
