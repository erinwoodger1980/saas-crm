{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },

    "jsx": "preserve",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    "strict": true,
    "noEmit": true,
    "incremental": true,
    "lib": ["dom", "dom.iterable", "esnext"],

    "plugins": [{ "name": "next" }]
  },
  "include": ["next-env.d.ts", ".next/types/**/*.ts", "src/**/*"],
  "exclude": ["node_modules"]
}